<%= render 'layouts/public' %>
<div class = "container">
  <div class = "row">
  <h3 class = "ml-3 mb-3">「やる気度」別　人気レシピ一覧</h3>
  </div>
  
<div class = "row ml-2 mt-3">やる気度★</div>
<% @recipes.each do |recipe| %>
<div class = "card">
  <div class = "card-body">
  <%= link_to recipe_path(recipe.id) do %>
    <% if recipe.image.present? %>
      <% if recipe.image.content_type.include? ('image/') %>
      <%= image_tag recipe.image, size: "300x300" %>
      <% else %>
      <%= video_tag rails_blob_path(recipe.video) %>
      <% end %>
    <% end %>
  <% end %>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= recipe.name %></li>
    <li class="list-group-item">
    <%= link_to user_path(recipe.user.id) do %>
    <%= image_tag recipe.user.get_profile_image(50,50) %>
    <% end %>
    <%= recipe.user.name %>
    </li>
  </ul>
</div>
<% end %>

