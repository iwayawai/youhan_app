<%= render 'layouts/admin' %>
<div class = "container">
  <div class = "row">
  <h3>会員一覧</h3>
  </div>

<table class ="table mt-5">
  <thead>
    <tr>
      <th>会員一覧</th>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td>
      <%= link_to admin_user_path(user.id) do %>
      <%= user.name %>
      <% end %>
      </td>
      <td><%= user.email %></td>
      <td><p class="<%= user.is_deleted ? "text-danger" : "text-success" %>"><%= user.is_deleted ? '退会':'有効' %></p></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @users %>
</div>