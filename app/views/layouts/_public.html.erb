<header>
      <nav class="navbar navbar-expand-lg">
      <div class="container">
      <div class = "mt-4">
      <%= image_tag 'rogo', size: "180x180"%>
      </div>
      <div class = "mt-4">
      <%= form_tag({controller:"recipes", action:"index"}, method: :get) do %>
      <%= text_field_tag :search, placeholder="キーワードを入力" %>
      <%= button_tag type: "submit", class: "btn btn-default" do %>
      <i class="fad fa-search"></i>
      <% end %>
      <% end %>
      
      やる気度：
      <%= form_tag({controller:"recipes", action:"index"}, method: :get) do %>
      <%= select_tag :star, options_for_select([['---選択してください---', ''], ["★", 1], ["★★", 2], ["★★★", 3]]) %>
      <%= submit_tag '検索' %>
      <% end %>
      </div>

      <% if user_signed_in? %>
        <ul class="navbar-nav ml-auto">
        <li class="nav-item mt-2 mr-3"><%= link_to "マイページ", user_path(current_user.id), class: "btn btn-outline-success" %></li>
        <li class="nav-item mt-2 mr-3"><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %></li>
        <li class="nav-item mt-2 mr-3"><%= link_to "ABOUT", about_path, class: "btn btn-outline-info" %></li>
      </ul>

     <% else %>
      <ul class="navbar-nav ml-auto">
      <li class="nav-item mr-3"><%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-primary" %></li>
      <li class="nav-item mr-3"><%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-success" %></li>
      <li class="nav-item mr-3"><%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post, class: "btn btn-outline-dark" %>
      <li class="nav-item mr-3"><%= link_to "ABOUT", about_path, class: "btn btn-outline-info" %></li>
      </ul>
    <% end %>
     </div>
     </nav>
</header>