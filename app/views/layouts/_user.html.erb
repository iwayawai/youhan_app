<div class = "container">
  <div class = "row">
  <%= image_tag user.get_profile_image(100,100), class:"rounded-circle" %>
  </div>
  <%= user.name %>

  <div class = "row mt-3">
  <div class = "button-round">
  <%= link_to favorites_user_path(user) do %>
    <%= image_tag asset_path("pink_heart.jpg"), class:"rounded-circle", size: "30x30" %>
    いいね
  <% end %>
  </div>
  </div>

  <div class = "row mt-3">
  <div class = "button-round">
  <%= link_to comments_user_path(user) do %>
    <%= image_tag asset_path("blue_star.jpg"), class:"rounded-circle", size: "30x30" %>
    コメント
  <% end %>
  </div>
  </div>

  <% if user == current_user %>
  <div class = "row mt-3">
  <%= link_to "レシピ投稿", new_recipe_path, class:"btn-orange" %>
  </div>
  <% end %>
  
  <% if user.name != "ゲストユーザー" %>
  <div class = "row mt-3">
  <%= link_to "会員情報編集", information_edit_users_path, class:"btn-blue" %>
  </div>
  <% end %>
</div>